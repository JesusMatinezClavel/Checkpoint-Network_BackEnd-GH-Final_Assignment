{
  "name": "checkpoint_backend",
  "version": "1.0.0",
  "description": "backend with express and typeOrm for the checkpoint-network",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "nodemon ./src/server.ts",
    "start": "node ./dist/server.ts",
    "add-migration": "typeorm migration:create",
    "run-migrations": "typeorm-ts-node-commonjs migration:run -d ./src/database/db.ts",
    "revert-migrations": "typeorm-ts-node-commonjs migration:revert -d ./src/database/db.ts",
    "add-entity": "typeorm entity:create"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "faker": "^5.5.3",
    "mysql2": "^3.9.7",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
